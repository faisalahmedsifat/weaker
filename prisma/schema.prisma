generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  // change to postgres if you think thats better.
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id              Int         @id @default(autoincrement())
  name            String
  estimatedHours  Float?
  category        String
  archived        Boolean     @default(false)
  archivedAt      DateTime?
  createdAt       DateTime    @default(now())

  weeklyTasks     WeeklyTask[]
}

model WeeklyTask {
  id          Int       @id @default(autoincrement())
  taskId      Int?
  completed   Boolean   @default(false)
  completedAt DateTime?
  inProgress  Boolean   @default(false)
  unplanned   Boolean   @default(false)
  addedAt     DateTime  @default(now())

  // Unplanned task fields (when taskId is null)
  unplannedName     String?
  unplannedHours    Float?
  unplannedCategory String?

  task        Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model WeekMetadata {
  id          Int      @id @default(autoincrement())
  weekStart   DateTime @unique
  createdAt   DateTime @default(now())
}
